<!--login.wxml-->
<view>
  <image class='w100' src='../image/banner_register.jpg' mode='widthFix'></image>
  <view class='flex-center-column fz14'>
    <input placeholder-class="co-f2" bindblur='getName' placeholder='请输入姓名'></input>
    <input placeholder-class="co-f2" bindblur='getIdCard' placeholder='请输入身份证'></input>
    <input placeholder-class="co-f2" bindblur='getPhone' placeholder='请输入手机号'></input>
    <input placeholder-class="co-f2" bindblur='getPwd' placeholder='请输入密码'></input>
   
    <button bindtap='register' class='btn co-ff'>立即注册</button>
    <view bindtap='login'>
      <text class='co-ce'>以有账户</text>
      <text class='co-f0'>马上登录</text>
    </view>
  </view>
</view>